	echo "config.status: creating Makefile";
	${CAT} "${SRCDIR}"/src/build/mk/root-makefile.mk \
		>"${SRCDIR}"/Makefile;
], [
	CAT="${CAT}";
	SRCDIR="${SRCDIR}";
])

