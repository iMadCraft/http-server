if test ! -z "${ac_srcdir}"; then
    SRCDIR="${SRCDIR="${ac_srcdir}"}";
else
    SRCDIR="${SRCDIR="."}";
fi

CAT="${CAT="cat"}";
AUTOCONF="${AUTOCONF="autoconf"}";

